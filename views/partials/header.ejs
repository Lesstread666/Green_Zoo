<header class="header">
    <!-- Brand: Logo + Text -->
    <div class="brand">
        <img class="logo" alt="Green Zoo Logo" src="/images/logos-icons/logo.png" />
        <div class="brand-text">
            <span class="brand-title">Green Zoo</span>
            <span class="brand-subtitle">Wildlife Park</span>
        </div>
    </div>

    <!-- Desktop Navigation -->
    <nav class="navigation-menu desktop-nav">
        <ul>
            <li>
                <a href="/mammals" class="<%= activePage === 'mammals' ? 'active' : '' %>">
                    Mammals
                </a>
            </li>

            <li>
                <a href="/reptiles" class="<%= activePage === 'reptiles' ? 'active' : '' %>">
                    Reptiles
                </a>
            </li>

            <li>
                <a href="/birds" class="<%= activePage === 'birds' ? 'active' : '' %>">
                    Birds
                </a>
            </li>
        </ul>
    </nav>

    <!-- Mobile Navigation -->
    <nav class="navigation-menu mobile-nav">
        <ul>
            <li><a href="/mammals" class="<%= activePage === 'mammals' ? 'active' : '' %>">
                    <img class="nav-icon" src="/images/logos-icons/mammals-icon.png">
                </a>

            </li>
            <li><a href="/reptiles" class="<%= activePage === 'reptiles' ? 'active' : '' %>">
                    <img class="nav-icon" src="/images/logos-icons/reptiles-icon.png">
                </a>

            </li>
            <li><a href="/birds" class="<%= activePage === 'birds' ? 'active' : '' %>">
                    <img class="nav-icon" src="/images/logos-icons/birds-icon.png">
                </a>

            </li>
        </ul>
    </nav>
</header>